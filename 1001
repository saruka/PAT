```
#include <cstdio>
#include <cstring>
#include <iostream>
#include <algorithm>
using namespace std;
int main(int argc, char const *argv[])
{
	scanf("%d", &n);
	int sum = 0;
	while(n != 1)
	{
		if(n % 2 == 0) n >>= 1;
		else n = (n * 3 + 1) >> 1;
		sum++;
	}
	printf("%d\n", sum);
	return 0;
}
```
